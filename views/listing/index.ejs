<% layout("/layout/boilerplate") -%>

<h3 >All Listings</h3>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% for (let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing_link">
            <div class="col">
                <div class="card listing-card border-0">
                    <img src="<%= listing.image.url %>" class="card-img-top " alt="listing_image" style="height: 280px;" >
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text mt-2">
                            <strong><%= listing.title %></strong><br />
                            &#8377;<%= (Number(listing.price) || 0).toLocaleString("en-IN") %>
                        </p>
                    </div>
                </div>
            </div>
        </a>
        <% } %>
    </div>
